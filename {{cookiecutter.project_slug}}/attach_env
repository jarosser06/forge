#!/bin/bash

# Script to attach to the running {{cookiecutter.project_slug}} devcontainer
# Usage: ./attach_env

set -e

# Color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç Looking for {{cookiecutter.project_slug}} devcontainer...${NC}"

# Find the running {{cookiecutter.project_slug}} devcontainer
CONTAINER_ID=$(docker ps --filter "name={{cookiecutter.project_slug}}" --filter "status=running" --format "{{ '{{' }}.ID{{ '}}' }}" | head -1)

if [ -z "$CONTAINER_ID" ]; then
    echo -e "${RED}‚ùå No running {{cookiecutter.project_slug}} devcontainer found!${NC}"
    echo -e "${YELLOW}üí° Available options:${NC}"
    echo "   1. Start devcontainer: 'docker-compose up -d' in .devcontainer/"
    echo "   2. Open in VS Code: 'code .' and reopen in container"
    echo "   3. Check running containers: 'docker ps'"
    exit 1
fi

# Get container name for display
CONTAINER_NAME=$(docker ps --filter "id=$CONTAINER_ID" --format "{{ '{{' }}.Names{{ '}}' }}")

echo -e "${GREEN}‚úÖ Found running container: ${CONTAINER_NAME} (${CONTAINER_ID})${NC}"
echo -e "${BLUE}üöÄ Entering interactive shell...${NC}"
echo -e "${YELLOW}üí° Tip: Type 'exit' to leave the container${NC}"
echo ""

# Execute interactive shell in the container
docker exec -it "$CONTAINER_ID" /bin/bash

echo -e "${GREEN}üëã Exited devcontainer shell${NC}"